<%= form_for @vote, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label "Anzahl der neuen Unterstützungserklärungen", :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :count, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label "Bezirk", :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :district_id, District.all, :id, :name %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                votes_path, :class => 'btn' %>
  </div>
<% end %>
